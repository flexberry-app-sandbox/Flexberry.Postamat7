<h3 class="ui header">{{t "forms.i-i-s-postamat7-хранение-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.номер
      class=(if (v-get validationModel "номер" "isInvalid") "error")
      label=(t "forms.i-i-s-postamat7-хранение-e.номер-caption")
      data-test-i-i-s-postamat7-хранение-e-номер=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "номер" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-postamat7-хранение-e.датаНачала-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаНачала
      class=(if (v-get validationModel "датаНачала" "isInvalid") "error")
      data-test-i-i-s-postamat7-хранение-e-датаНачала=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаНачала" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-postamat7-хранение-e.датаЗавершения-caption"}}</label>
    {{flexberry-simpledatetime
      type="date"
      readonly=readonly
      value=model.датаЗавершения
      class=(if (v-get validationModel "датаЗавершения" "isInvalid") "error")
      data-test-i-i-s-postamat7-хранение-e-датаЗавершения=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "датаЗавершения" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-postamat7-хранение-e.продление-caption"}}</label>
    {{flexberry-checkbox
      readonly=readonly
      value=model.продление
      class=(if (v-get validationModel "продление" "isInvalid") "error")
      data-test-i-i-s-postamat7-хранение-e-продление=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "продление" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-postamat7-хранение-e.посылка-caption"}}</label>
    {{flexberry-groupedit
      componentName="посылкаGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.посылка
      content=model.посылка
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "посылка" "isInvalid") "error")
      data-test-i-i-s-postamat7-хранение-e-посылка=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "посылка" "message")}}
  </div>
</form>
